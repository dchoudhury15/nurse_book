<div class="page-header">
  <h3>Connection #<%= @connection.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Sender</dt>
      <dd><%= @connection.sender_id %></dd>

      <dt>Receiver</dt>
      <dd><%= @connection.receiver_id %></dd>

      <dt>Request accepted</dt>
      <dd><%= @connection.request_accepted %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/connections" class="btn btn-primary">
        Back
      </a>
      <a href="/connections/<%= @connection.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_connection/<%= @connection.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
